@model mjaang_bugtracker.Models.TicketComments

@{
    ViewBag.Title = "EditComment";
}

<h2>Edit Comment</h2>

@using (Html.BeginForm("EditComment", "Tickets", FormMethod.Post, new { enctype = "Multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.TicketId)
        @Html.HiddenFor(model => model.Updated);

        <div class="form-group">
            @*@Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10" style="align-content:center">
                @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control", id = "Ed", rows = "5" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Ticket", "Details", new { id = Model.TicketId })
</div>

